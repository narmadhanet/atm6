@model IEnumerable<MVCDemo.Models.Passenger>
@{
    ViewBag.Title = "PassengerPrint";
}

<h2>PassengerPrint</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Balance
            </th>

            <th>
                OfferRate
            </th>
        </tr>
    </thead>

    <tbody>

@foreach(var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.Name,"Details","Passenger",new { id=item.Id},null)
        </td>

        <td>
            @Html.DisplayFor(m=>item.Balance)
        </td>

        <td>
            @Html.DisplayFor(m=>item.AccountType.Name)
        </td>
    </tr>
}
</tbody>
</table>